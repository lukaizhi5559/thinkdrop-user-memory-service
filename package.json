{
  "name": "thinkdrop-user-memory-service",
  "version": "1.0.0",
  "description": "UserMemory microservice with MCP protocol support for Thinkdrop AI",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "test:load": "node tests/load/load-test.js",
    "db:init": "node scripts/init-db.js",
    "db:migrate": "node scripts/migrate-db.js",
    "db:verify": "node scripts/verify-db.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "memory",
    "mcp",
    "semantic-search",
    "embeddings",
    "thinkdrop"
  ],
  "author": "Thinkdrop AI Team",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "duckdb": "latest",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "lru-cache": "^11.2.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
