# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
DB_PATH=./data/user_memory.duckdb

# Security
API_KEY=your-secret-key-here-minimum-32-characters
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_CACHE_TTL=86400000
MAX_AGE_DAYS=30

# Similarity Thresholds
MIN_SIMILARITY_THRESHOLD=0.3

# Screen Monitor
MONITOR_SCREEN_OCR=false
SCREEN_CAPTURE_INTERVAL=10000
SCREEN_CAPTURE_DIFF_THRESHOLD=0.15
SCREEN_CAPTURE_IDLE_TIMEOUT=300000
MONITOR_USER_ID=local_user

# Data Retention
RETENTION_ENABLED=true
RETENTION_MAX_DAYS=1825
RETENTION_PURGE_DAYS=365
RETENTION_CHECK_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
